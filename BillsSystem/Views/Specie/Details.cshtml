

@model DAL.ViewModels.SpecieVM

@{
    ViewData["Title"] = "Specie Details";
}

<h1>@SharedLocalizer["Specie Details"]</h1>



<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["Specie Name"]
        </dt>
        <dd class="col-sm-10">
            @Model.SpecieName
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Company Name"]
        </dt>
        <dd class="col-sm-10">
            @(Model.Company != null ? Model.Company.CompanyName : "No Company")
        </dd>
        <a asp-action=Edit asp-route-id="@Model.CompanyID" class="btn btn-primary">@SharedLocalizer["Edit"]</a>
        <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Back to List"]</a>

    </dl>
</div>
