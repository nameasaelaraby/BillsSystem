@model DAL.ViewModels.UnitVM

@{
    ViewData["Title"] = "Edit Unit";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4>Edit Unit</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="UnitID" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="UnitName">Unit Name</label>
                    <div class="col-sm-10">
                        <input asp-for="UnitName" class="form-control" />
                        <span asp-validation-for="UnitName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="UnitNote">Unit Note</label>
                    <div class="col-sm-10">
                        <textarea asp-for="UnitNote" class="form-control"></textarea>
                        <span asp-validation-for="UnitNote" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a href="@Url.Action("Index", "Unit")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
