




@model IEnumerable<DAL.ViewModels.UnitVM>

@{
    ViewData["Title"] = "Units";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4>@SharedLocalizer["Unit List"]</h4>
            <a href="@Url.Action("Create", "Unit")" class="btn btn-primary">@SharedLocalizer["Create New Unit"]</a>




        
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                       
                        <th>@SharedLocalizer["Unit Name"]</th>
                        <th>@SharedLocalizer["Unit Note"]</th>
                        <th>@SharedLocalizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var unit in Model)
                    {
                        <tr>
                            
                            <td>@unit.UnitName</td>
                            <td>@unit.UnitNote</td>
                            <td>
                                <a asp-action="Details" asp-controller="Unit" asp-route-id="@unit.UnitID" class="btn btn-success">@SharedLocalizer["Details"]</a>

                                <a asp-action="Edit" asp-controller="Unit" asp-route-id="@unit.UnitID" class="btn btn-warning btn-sm">@SharedLocalizer["Edit"]</a>

                                <a asp-action="Delete" asp-controller="Unit" asp-route-id="@unit.UnitID" class="btn btn-danger btn-sm">@SharedLocalizer["Delete"]</a>
                            </td>

                        </tr>
                    }
                </tbody>
                <table class="table table-striped">
        </div>
    </div>
</div>
