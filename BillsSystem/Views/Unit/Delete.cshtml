@model DAL.ViewModels.UnitVM

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Unit</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>UnitVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitNote)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UnitID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
