@model DAL.ViewModels.SelesReportVM

@{
    ViewData["Title"] = "Edit Sales Report";
}

<h1>Edit Sales Report</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="SelesReportName" class="control-label"></label>
        <input asp-for="SelesReportName" class="form-control" />
        <span asp-validation-for="SelesReportName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BillNumber" class="control-label"></label>
        <select asp-for="BillNumber" class="form-control" asp-items="ViewBag.Bills">
            <option value="">Select Bill</option>
        </select>
        <span asp-validation-for="BillNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
