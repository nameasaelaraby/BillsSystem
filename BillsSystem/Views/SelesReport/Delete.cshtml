@model DAL.ViewModels.SelesReportVM

@{
    ViewData["Title"] = "Delete Sales Report";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>Are you sure you want to delete this sales report?</h3>
    <div>
        <h4>Sales Report</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SelesReportName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SelesReportName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillNumber)
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="SelesReportID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
