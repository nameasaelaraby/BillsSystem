@model DAL.ViewModels.ClientVM

@{
    ViewData["Title"] = "Delete Client";
}

<h1>Delete Client</h1>

<h4>Are you sure you want to delete this client?</h4>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Name
        </dt>
        <dd class="col-sm-9">
            @Model.ClientName
        </dd>
        <dt class="col-sm-3">
            Phone
        </dt>
        <dd class="col-sm-9">
            @Model.Phone
        </dd>
        <dt class="col-sm-3">
            Address
        </dt>
        <dd class="col-sm-9">
            @Model.Address
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ClientId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
        </div>
    </form>
</div>
