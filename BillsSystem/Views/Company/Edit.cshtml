

@model DAL.ViewModels.CompanyVM

@{
    ViewData["Title"] = "Edit Company";
}

<h2>@SharedLocalizer["Edit Company"]</h2>



<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="CompanyID" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@SharedLocalizer["CompanyName"]</label>
        <div class="col-sm-10">
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@SharedLocalizer["CompanyNote"]</label>
        <div class="col-sm-10">
            <input asp-for="CompanyNote" class="form-control" />
            <span asp-validation-for="CompanyNote" class="text-danger"></span>
        </div>
    </div>

    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
            <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Back to List"]</a>
        </div>
    </div>
</form>
