
@model DAL.ViewModels.CompanyVM

@{
    ViewData["Title"] = "Delete Company";
}

<h2>@SharedLocalizer["Delete Company"]</h2>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@SharedLocalizer["Company Name"]</dt>
            <dd class="col-sm-10">@Model.CompanyName</dd>

            <dt class="col-sm-2">@SharedLocalizer["Company Note"]</dt>
            <dd class="col-sm-10">@Model.CompanyNote</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CompanyID" />
    <button type="submit" class="btn btn-danger">@SharedLocalizer["Delete"]</button>
    <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Back to List"]</a>
</form>
