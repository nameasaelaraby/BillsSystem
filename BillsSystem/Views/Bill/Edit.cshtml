@model DAL.ViewModels.BillVM

@{
    ViewData["Title"] = "Edit Sales Invoice";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bill Details</h4>
        <hr />

        <div class="form-group">
            <label asp-for="BillDate" class="control-label col-md-2">Bill Date</label>
            <div class="col-md-10">
                <input asp-for="BillDate" class="form-control" />
                <span asp-validation-for="BillDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="BillNumber" class="control-label col-md-2">Bill Number</label>
            <div class="col-md-10">
                <input asp-for="BillNumber" class="form-control" readonly />
                <span asp-validation-for="BillNumber" class="text-danger"></span>
            </div>
        </div>


       
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label col-md-2">Quantity</label>
            <div class="col-md-10">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

       

        <div class="form-group">
            <label asp-for="SellingPrice" class="control-label col-md-2">Selling Price</label>
            <div class="col-md-10">
                <input asp-for="SellingPrice" class="form-control" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PercentageDiscount" class="control-label col-md-2">Percentage Discount</label>
            <div class="col-md-10">
                <input asp-for="PercentageDiscount" class="form-control" />
                <span asp-validation-for="PercentageDiscount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ValueDiscount" class="control-label col-md-2">Value Discount</label>
            <div class="col-md-10">
                <input asp-for="ValueDiscount" class="form-control" />
                <span asp-validation-for="ValueDiscount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PaidUp" class="control-label col-md-2">Paid Up</label>
            <div class="col-md-10">
                <input asp-for="PaidUp" class="form-control" />
                <span asp-validation-for="PaidUp" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
